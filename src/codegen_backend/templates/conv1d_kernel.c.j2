{{ signature }}
    ssize_t in_per_group = {{ in_channels }} / {{ groups }};
    ssize_t out_per_group = {{ out_channels }} / {{ groups }};
    for (ssize_t n = 0; n < {{ batch }}; ++n) {
        for (ssize_t oc = 0; oc < {{ out_channels }}; ++oc) {
            ssize_t group = (ssize_t)oc / out_per_group;
            for (ssize_t ol = 0; ol < {{ out_l }}; ++ol) {
                {{ c_type }} acc = 0.0f;
                ssize_t in_l_base = (ssize_t)ol * {{ stride }} - {{ padding }};
                for (ssize_t ic = 0; ic < in_per_group; ++ic) {
                    ssize_t in_c = group * in_per_group + (ssize_t)ic;
                    for (ssize_t kl = 0; kl < {{ k_l }}; ++kl) {
                        ssize_t in_l_idx = in_l_base + (ssize_t)kl * {{ dilation }};
                        if (in_l_idx < 0 || in_l_idx >= {{ in_l }}) {
                            continue;
                        }
                        acc += input[n][in_c][in_l_idx] * weight[oc][ic][kl];
                    }
                }
                {% if has_bias %}
                acc += bias[oc];
                {% endif %}
                out[n][oc][ol] = acc;
            }
        }
    }
}
