{{ signature }}
    ssize_t in_per_group = {{ in_channels }} / {{ groups }};
    ssize_t out_per_group = {{ out_channels }} / {{ groups }};
    ssize_t out_pad_h = {{ out_pad_h }};
    ssize_t out_pad_w = {{ out_pad_w }};
    (void)out_pad_h;
    (void)out_pad_w;
    {% if has_batch %}
    for (ssize_t n = 0; n < {{ batch }}; ++n) {
        for (ssize_t oc = 0; oc < {{ out_channels }}; ++oc) {
            ssize_t group = (ssize_t)oc / out_per_group;
            for (ssize_t oh = 0; oh < {{ out_h }}; ++oh) {
                for (ssize_t ow = 0; ow < {{ out_w }}; ++ow) {
                    {{ c_type }} acc = 0.0f;
                    ssize_t in_h_base = (ssize_t)oh * {{ stride_h }} - {{ pad_h }};
                    ssize_t in_w_base = (ssize_t)ow * {{ stride_w }} - {{ pad_w }};
                    for (ssize_t ic = 0; ic < in_per_group; ++ic) {
                        ssize_t in_c = group * in_per_group + (ssize_t)ic;
                        for (ssize_t kh = 0; kh < {{ k_h }}; ++kh) {
                            ssize_t in_h_idx = in_h_base + (ssize_t)kh * {{ dil_h }};
                            if (in_h_idx < 0 || in_h_idx >= {{ in_h }}) {
                                continue;
                            }
                            for (ssize_t kw = 0; kw < {{ k_w }}; ++kw) {
                                ssize_t in_w_idx = in_w_base + (ssize_t)kw * {{ dil_w }};
                                if (in_w_idx < 0 || in_w_idx >= {{ in_w }}) {
                                    continue;
                                }
                                acc += {{ input_access }} * {{ weight_access }};
                            }
                        }
                    }
                    {% if has_bias %}
                    acc += bias[oc];
                    {% endif %}
                    out[n][oc][oh][ow] = acc;
                }
            }
        }
    }
    {% else %}
    for (ssize_t oc = 0; oc < {{ out_channels }}; ++oc) {
        ssize_t group = (ssize_t)oc / out_per_group;
        for (ssize_t oh = 0; oh < {{ out_h }}; ++oh) {
            for (ssize_t ow = 0; ow < {{ out_w }}; ++ow) {
                {{ c_type }} acc = 0.0f;
                ssize_t in_h_base = (ssize_t)oh * {{ stride_h }} - {{ pad_h }};
                ssize_t in_w_base = (ssize_t)ow * {{ stride_w }} - {{ pad_w }};
                for (ssize_t ic = 0; ic < in_per_group; ++ic) {
                    ssize_t in_c = group * in_per_group + (ssize_t)ic;
                    for (ssize_t kh = 0; kh < {{ k_h }}; ++kh) {
                        ssize_t in_h_idx = in_h_base + (ssize_t)kh * {{ dil_h }};
                        if (in_h_idx < 0 || in_h_idx >= {{ in_h }}) {
                            continue;
                        }
                        for (ssize_t kw = 0; kw < {{ k_w }}; ++kw) {
                            ssize_t in_w_idx = in_w_base + (ssize_t)kw * {{ dil_w }};
                            if (in_w_idx < 0 || in_w_idx >= {{ in_w }}) {
                                continue;
                            }
                            acc += {{ input_access }} * {{ weight_access }};
                        }
                    }
                }
                {% if has_bias %}
                acc += bias[oc];
                {% endif %}
                out[oc][oh][ow] = acc;
            }
        }
    }
    {% endif %}
}
